{{#paper-sidenav-container class="inner-sidenav"}}
  {{#paper-sidenav
    class="md-whiteframe-z2 layout-column"
    name="left"
    open=leftSideBarOpen
    closeOnClick=false
    onToggle=(action (mut leftSideBarOpen))
  }}
    {{#paper-toolbar class='sidebar-toolbar' as |toolbar|}}
      {{#paper-toolbar-tools}}
        Ember Twiddle
        <span class="flex"></span>
        {{#paper-button iconButton=true onClick=(action (mut leftSideBarOpen) (not leftSideBarOpen))}}
          {{paper-icon 'chevron left'}}
        {{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    {{#paper-content class='sidebar-content flex'}}
      {{gist-header class="flex"
        model=model
        session=session
        unsaved=unsaved
        activeEditorCol=activeEditorCol
        activeFile=activeFile
        isRevision=isRevision
        titleChanged=(action "titleChanged")
        addFile=(action "addFile")
        addHelper=(action "addHelper")
        addComponent=(action "addComponent")
        addUnitTestFile=(action "addUnitTestFile")
        addIntegrationTestFile=(action "addIntegrationTestFile")
        addAcceptanceTestFile=(action "addAcceptanceTestFile")
        renameFile=(action "renameFile")
        removeFile=(action "removeFile")
        setEditorKeyMap=(action "setEditorKeyMap")
        versionChanged=(action "rebuildApp")
        openFile=(action "openFile")
        hideFileTree=(action "hideFileTree")
      }}
    {{/paper-content}}
  {{/paper-sidenav}}

  {{#paper-card-content class="flex"}}
    <div class="layout-fill layout-column main-content">
      {{#paper-sidenav-toggle name="left" as |toggleAction|}}
        {{#paper-button raised=true classNames="hide-gt-sm" onClick=(action toggleAction)}}
          Toggle
        {{/paper-button}}
      {{/paper-sidenav-toggle}}
      {{gist-body model=model
        columns=columns
        settings=settings
        numColumns=realNumColumns
        fullScreen=fullScreen
        fileTreeShown=fileTreeShown
        notify=notify
        isBuilding=isBuilding
        buildErrors=buildErrors
        applicationUrl=applicationUrl
        buildOutput=buildOutput
        testsEnabled=testsEnabled
        focusEditor=(action "focusEditor")
        selectFile=(action "selectFile")
        updateColumn=(action "updateColumn")
        removeColumn=(action "removeColumn")
        addColumn=(action "addColumn")
        showFileTree=(action "showFileTree")
        liveReloadChanged=(action "liveReloadChanged")
        runNow=(action "runNow")
        exitFullScreen=(action "exitFullScreen")
        switchTests=(action "switchTests")
      }}
    </div>
  {{/paper-card-content}}
{{/paper-sidenav-container}}
