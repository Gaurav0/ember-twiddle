{{#paper-menu as |menu|}}
  {{#menu.trigger class='layout-column'}}
    {{#paper-button}}
      {{paper-icon 'keyboard' size=21}}
      Keystroke Mode
    {{/paper-button}}
  {{/menu.trigger}}
  {{#menu.content width=4 as |content|}}
    {{#each modes as |mode|}}
      {{#content.menu-item onClick=(action 'setKeyMap' mode.id)}}
        {{#paper-button}}
          {{mode.label}}
        {{/paper-button}}
      {{/content.menu-item}}
    {{/each}}
  {{/menu.content}}
{{/paper-menu}}
