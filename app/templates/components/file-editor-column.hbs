<div class="header">

  <ul class="nav nav-pills file-picker">
    <li class="dropdown">
      {{#if allFiles.length}}
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        {{#if file}}
          {{file.filePath}}
        {{else}}
          No file selected
        {{/if}}
        <b class="caret"></b>
      </a>
      {{else}}
      <a>No files available</a>
      {{/if}}
      <ul class="dropdown-menu">
      {{#each allFiles as |file|}}
	      <li><a {{action 'selectFile' file}}>{{file.filePath}}</a></li>
      {{else}}
        <li class="disabled"><a>No files available</a></li>
      {{/each}}
      </ul>
    </li>
  </ul>

  <span class="nav-right">
    <span class="glyphicon glyphicon-remove" {{action 'removeColumn' col}}></span>
    {{#if lastColumn}}
      <span class="glyphicon glyphicon-plus" {{action 'addColumn'}}></span>
    {{/if}}
  </span>
</div>
{{#if file}}
{{ivy-codemirror
    value         = file.content
    mode          = editorMode
    lineNumbers   = true
    fixedGutter   = true
    lineWrapping	= true
    tabSize				= 2
    valueUpdated  = "valueUpdated"
}}
{{/if}}
